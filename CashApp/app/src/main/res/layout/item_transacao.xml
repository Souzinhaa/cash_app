<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10sp"
    android:layout_marginLeft="@dimen/vintesp"
    android:layout_marginRight="@dimen/vintesp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_transaction_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/img_transacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_titulo_transacao"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/deposito_recebido"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/text_nome_transacao"/>

        <TextView
            android:id="@+id/text_nome_transacao"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:text="abcdefg"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_transacao"/>

        <TextView
            android:id="@+id/text_valor_transacao"
            style="@style/TransacoesText"
            android:layout_marginTop="2sp"
            android:text="abcdefg"
            app:layout_constraintTop_toBottomOf="@id/text_nome_transacao"
            app:layout_constraintLeft_toLeftOf="@id/text_nome_transacao"/>

        <TextView
            android:id="@+id/text_data_transacao"
            style="@style/TransacoesText"
            android:text="abcdefg"
            android:layout_marginRight="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:background="@color/gray_7"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/text_valor_transacao"/>

</androidx.constraintlayout.widget.ConstraintLayout>