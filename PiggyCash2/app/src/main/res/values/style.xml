<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextLogin">
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/vintesp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_marginTop">@dimen/trintasp</item>
        <item name="android:layout_marginLeft">40sp</item>
        <item name="android:layout_marginRight">40sp</item>
        <item name="android:drawablePadding">6sp</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_width">240sp</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:textSize">@dimen/vintesp</item>
    </style>

    <style name="BaseTextLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/trintasp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="TextLogin" parent="BaseTextLogin">
        <item name="android:textSize">@dimen/vintesp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextTittleLogin" parent="BaseTextLogin">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
</resources>